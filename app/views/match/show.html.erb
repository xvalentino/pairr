<div class="container">
  <h1><%= @random_user.name %></h1>
  <%= image_tag @random_user.image %>
  <p><%= @random_user.description %></p>
  <ul>
    <% @random_user.languages.each do |lang| %>
      <p> <%= lang.name %></p>
    <% end %>
  </ul>
  <div class="row">
    <%= button_to "Approve", "/match/#{@random_user.id}/up", class: "waves-effect waves-light btn" %>
    <%= button_to "Reject", "/match/#{@random_user.id}/down", class: "waves-effect red btn" %>
  </div>
</div>
